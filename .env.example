# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Provider API Keys (TIERED STRATEGY - Cost Optimized)
# Free tier: Uses Google Gemini (FREE up to 1,500 requests/day)
# Pro tier: Uses DeepSeek ($0.27/1M input, $1.10/1M output - 93% cheaper than Claude)
# Studio tier: Uses Anthropic Claude (Premium quality)

# DeepSeek API (RECOMMENDED for Pro tier - 93% cost savings)
# Sign up: https://platform.deepseek.com
DEEPSEEK_API_KEY=sk-your-deepseek-api-key

# Google Gemini API (FREE tier - 1,500 requests/day)
# Sign up: https://ai.google.dev/
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Anthropic Claude API (Premium - Studio tier only)
# Sign up: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# OpenAI API (Optional fallback)
OPENAI_API_KEY=sk-your-openai-api-key

# Optional: Perplexity AI (for real-time research with citations)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# AI Provider Selection
# Options: 'auto' (tier-based), 'deepseek', 'gemini', 'anthropic', 'openai'
# Default: 'auto' (Free→Gemini, Pro→DeepSeek, Studio→Claude)
AI_PROVIDER=auto

# Tier Limits (automatically enforced):
# Free: 500 tokens/request (~375 words), 10 requests/month, Gemini Flash
# Pro: 2000 tokens/request (~1500 words), 100 requests/month, DeepSeek
# Studio: 4000 tokens/request (~3000 words), unlimited, Claude 3.5 Sonnet

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Email (for collaboration features)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@ottopen.app

# Sentry (RECOMMENDED for production error tracking and monitoring)
# The logger will automatically send errors to Sentry when DSN is configured
# Sign up at https://sentry.io to get your DSN
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-organization-slug
SENTRY_PROJECT=your-project-name

# Logging Configuration
# Structured logging is enabled by default in production
# Set LOG_LEVEL to control verbosity (debug, info, warn, error)
LOG_LEVEL=info

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# Upstash Redis (Rate Limiting - RECOMMENDED FOR PRODUCTION)
# Sign up at https://upstash.com to get these credentials
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Vercel KV (Alternative to Upstash - if using Vercel)
KV_URL=your-kv-url
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-rest-api-token
KV_REST_API_READ_ONLY_TOKEN=your-kv-read-only-token
